<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasinoHSApp.Views.WebPageBrowserPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Return" Style="{StaticResource ButtonOutline}" 
                        BackgroundColor="Black" TextColor="White" 
                        HorizontalOptions="CenterAndExpand" Clicked="Button_Clicked"/>
            </StackLayout>
            <Label x:Name="LoadingLabel" IsVisible="false"/>
            <WebView x:Name="Browser" HeightRequest="1000" WidthRequest="1000" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasinoHSApp.Views.Login"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             >
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            
            <Label Text="Username:" />
            <Entry Placeholder="Username" PlaceholderColor="Black" BackgroundColor="LightGray" />
            <Label Text="Password:" />
            <Entry IsPassword="True" Placeholder="Password" BackgroundColor="LightGray" PlaceholderColor="Black" />
            <Button Text="Login" Clicked="Button_Clicked" />
            <Label Text="Change Password" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>  